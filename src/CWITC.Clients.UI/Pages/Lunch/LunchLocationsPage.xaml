            <Label Text="{Binding NoLocationsFoundMessage}" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" FontSize="22" TextColor="#D3D2D2"/>
       </StackLayout>-->
        </AbsoluteLayout>
</ContentPage>
